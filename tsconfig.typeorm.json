{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "outDir": "./dist-typeorm",
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./*"]
    }
  }
}

